<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    tools:context=".RewardSavingsActivity">
    <!--  ðŸ”¹ Header Card  -->
    <androidx.cardview.widget.CardView android:id="@+id/headerCard" android:layout_width="0dp" android:layout_height="92dp" android:layout_margin="16dp" app:cardCornerRadius="16dp" app:cardElevation="4dp" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" app:cardBackgroundColor="#FCFCFBFD">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:id="@+id/imageView3" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginStart="12dp" android:contentDescription="Back" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" app:srcCompat="@drawable/back"/>
            <TextView android:id="@+id/titleText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rewards" android:textColor="#000000" android:textSize="20sp" android:textStyle="bold" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView android:id="@+id/imageView4" android:layout_width="28dp" android:layout_height="28dp" android:layout_marginEnd="12dp" android:contentDescription="Menu" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" app:srcCompat="@drawable/menu"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <!--  ðŸ·ï¸ Category Tabs  -->
    <com.google.android.material.tabs.TabLayout android:id="@+id/rewardTabs" android:layout_width="0dp" android:layout_height="wrap_content" app:tabMode="fixed" app:tabGravity="fill" app:tabIndicatorColor="#3F51B5" app:tabTextColor="#808080" app:tabSelectedTextColor="#3F51B5" app:layout_constraintTop_toBottomOf="@id/headerCard" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.tabs.TabItem android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Savings"/>
        <com.google.android.material.tabs.TabItem android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Spending"/>
        <com.google.android.material.tabs.TabItem android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Milestones"/>
    </com.google.android.material.tabs.TabLayout>
    <!--  ðŸ”¸ Scrollable Rewards List  -->
    <ScrollView android:id="@+id/rewardScrollView" android:layout_width="0dp" android:layout_height="0dp" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@id/rewardTabs" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout android:id="@+id/rewardContainer" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
            <!--  ðŸ’° Savings Section  -->
            <TextView android:id="@+id/savingsHeader" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Savings" android:textStyle="bold" android:textSize="18sp" android:textColor="#000000" android:layout_marginBottom="8dp"/>
            <!--  First Deposit  -->
            <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp" app:cardCornerRadius="12dp" app:cardElevation="3dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="16dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_piggybank" android:contentDescription="Reward Icon"/>
                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="12dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="First Deposit" android:textSize="16sp" android:textStyle="bold" android:textColor="#000000"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="#2E7D32"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/checkFirstDeposit"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check_circle"
                        android:contentDescription="Check Icon"
                        app:tint="#888888"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--  R1000 Saved  -->
            <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp" app:cardCornerRadius="12dp" app:cardElevation="3dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="16dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_house" android:contentDescription="Reward Icon"/>
                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="12dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="R1000 Saved" android:textSize="16sp" android:textStyle="bold" android:textColor="#000000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:text=""
                            android:textColor="#888888"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/checkR1000Saved"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check_circle"
                        android:contentDescription="Check Icon"
                        app:tint="#888888"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--  1 Month Savings Streak  -->
            <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp" app:cardCornerRadius="12dp" app:cardElevation="3dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="16dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_calendar" android:contentDescription="Reward Icon"/>
                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="12dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1 Month Savings Streak" android:textSize="16sp" android:textStyle="bold" android:textColor="#000000"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="#888888"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/check1MonthStreak"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check_circle"
                        android:contentDescription="Check Icon"
                        app:tint="#888888"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--  10 Successful Transactions  -->
            <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp" app:cardCornerRadius="12dp" app:cardElevation="3dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="16dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_document" android:contentDescription="Reward Icon"/>
                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="12dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="10 Successful Transactions" android:textSize="16sp" android:textStyle="bold" android:textColor="#000000"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" android:textSize="14sp" android:textColor="#888888"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/check10Transactions"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check_circle"
                        android:contentDescription="Check Icon"
                        app:tint="#888888"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--  Weekly Goal Completed  -->
            <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp" app:cardCornerRadius="12dp" app:cardElevation="3dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="16dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_target" android:contentDescription="Reward Icon"/>
                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="12dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Weekly Goal Completed" android:textSize="16sp" android:textStyle="bold" android:textColor="#000000"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" android:textSize="14sp" android:textColor="#888888"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/checkWeeklyGoal"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check_circle"
                        android:contentDescription="Check Icon"
                        app:tint="#888888"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--  7-Day Streak  -->
            <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp" app:cardCornerRadius="12dp" app:cardElevation="3dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="16dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_flame" android:contentDescription="Reward Icon"/>
                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="12dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="7-Day Streak" android:textSize="16sp" android:textStyle="bold" android:textColor="#000000"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" android:textSize="14sp" android:textColor="#888888"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/check7DayStreak"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check_circle"
                        android:contentDescription="Check Icon"
                        app:tint="#888888"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--  ðŸ’³ Spending Section  -->
            <TextView android:id="@+id/spendingHeader" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Spending Rewards" android:textStyle="bold" android:textSize="18sp" android:textColor="#3F51B5" android:layout_marginTop="16dp" android:layout_marginBottom="8dp"/>
            <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp" app:cardCornerRadius="12dp" app:cardElevation="3dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="16dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_spending" android:contentDescription="Spending Reward"/>
                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="12dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="First Expense Logged" android:textSize="16sp" android:textStyle="bold" android:textColor="#000000"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="14sp" android:textColor="#4CAF50"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/checkFirstExpense"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check_circle"
                        android:contentDescription="Check Icon"
                        app:tint="#4CAF50"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--  ðŸ† Milestones Section  -->
            <TextView android:id="@+id/milestoneHeader" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Milestone Rewards" android:textStyle="bold" android:textSize="18sp" android:textColor="#3F51B5" android:layout_marginTop="16dp" android:layout_marginBottom="8dp"/>
            <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="12dp" app:cardElevation="3dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="16dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_trophy" android:contentDescription="Milestone Reward"/>
                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="12dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Saved R1000 Total" android:textSize="16sp" android:textStyle="bold" android:textColor="#000000"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" android:textSize="14sp" android:textColor="#888888"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/checkSaved1000Total"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check_circle"
                        android:contentDescription="Check Icon"
                        app:tint="#888888"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>